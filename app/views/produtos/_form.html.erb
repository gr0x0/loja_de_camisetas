<!--
      essa parte inicial serve para mostrar para o usuário a mensagem de erro relacionada ao campo que não foi
      preenchido.
-->
<% @produto.errors.full_messages.each do |message|%>
  <div class="alert alert-danger" role="alert"><%=message%></div>
<% end %>

<!-- form_for irá criar um formulário para preencher os atributos do modelo que é passado como parâmetro -->
<!-- o tal |f| é como referenciaremos o objeto de Produto
<!-- https://apidock.com/rails/ActionView/Helpers/FormHelper/form_for -->
<%= form_for @produto do |f| %>

  <!-- class:"form-control" indica que usaremos a classe form-control do bootstrap para a aparência desses campos -->
  <!-- https://getbootstrap.com/docs/3.3/css/#forms -->

  <div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :nome, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :descricao %>
    <%= f.text_area :descricao, class:"form-control", rows:"4"  %>
  </div>

  <div class="form-group">
    <%= f.label :departamento %>
    <%= f.collection_select :departamento_id, @departamentos, :id, :nome, {}, class: "form-control" %>
  </div>

  <div class="form-inline">
    <div class="form-group">
      <%= f.label :quantidade %>
      <%= f.number_field :quantidade, class:"form-control", step: 1  %>
    </div>

    <div class="form-group">
      <%= f.label :preco %>
      <%= f.number_field :preco, class:"form-control", step: 0.01  %>
      <%= f.submit texto_da_acao, class: "btn btn-primary" %>
    </div>

  </div>

<% end %>